# BDNewsPaper Scraper Configuration
# Copy this file to .env and customize

# Database
DATABASE_PATH=news_articles.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=scrapy.log

# Scraper Settings
MAX_PAGES=100
DOWNLOAD_DELAY=0.5
CONCURRENT_REQUESTS=64

# Date Filtering
DATE_FILTER_ENABLED=false
# FILTER_START_DATE=2024-01-01
# FILTER_END_DATE=2024-12-31

# Language Detection
LANGUAGE_DETECTION_ENABLED=true
LANGUAGE_DETECTION_STRICT=false
EXPECTED_LANGUAGES=en

# Content Quality
MIN_ARTICLE_WORDS=20
MAX_ARTICLE_WORDS=50000
MAX_SPECIAL_CHAR_RATIO=0.3

# Checkpointing
CHECKPOINT_ENABLED=false
CHECKPOINT_INTERVAL=100
CHECKPOINT_DIR=.checkpoints

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60.0
CIRCUIT_BREAKER_HALF_OPEN_CALLS=3

# Retry Settings
RETRY_TIMES=3
RETRY_BACKOFF_FACTOR=2.0
RETRY_MAX_DELAY=60.0
RETRY_JITTER_FACTOR=0.3

# API Settings (for FastAPI)
API_HOST=0.0.0.0
API_PORT=8000

# Alerts (optional)
# SLACK_WEBHOOK_URL=
# ALERT_EMAIL=
