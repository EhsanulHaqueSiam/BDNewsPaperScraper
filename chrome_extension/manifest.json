{
    "name": "bd-news-clipper",
    "version": "1.0.0",
    "description": "Chrome extension to clip news articles to BDNewsPaper database",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://*.prothomalo.com/*",
        "https://*.thedailystar.net/*",
        "https://*.kalerkantho.com/*",
        "https://*.bdnews24.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.prothomalo.com/*",
                "https://*.thedailystar.net/*",
                "https://*.kalerkantho.com/*",
                "https://*.bdnews24.com/*",
                "https://*.jugantor.com/*",
                "https://*.dhakatribune.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}